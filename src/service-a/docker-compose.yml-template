version: '2'
services:
  service-a:
    image: ${REGISTRY_URL_SERVICE_A}
    ports:
    - 8080:8080
    environment:
      API_CNAME: ${SERVICE_B_ENDPOINT}
      AWS_XRAY_DAEMON_ADDRESS:
    logging:
      driver: awslogs
      options:
        awslogs-group: /ecs/service-a
        awslogs-region: us-east-1
        awslogs-stream-prefix: ecs
  x-ray:
    image: amazon/aws-xray-daemon
    ports:
    - 2000:2000/udp
    environment:
      AWS_XRAY_DAEMON_ADDRESS:
    logging:
      driver: awslogs
      options:
        awslogs-group: /ecs/service-a
        awslogs-region: us-east-1
        awslogs-stream-prefix: ecs
